                {
                    bool infected = false;
                    int step =1, K[3], z=0, k;
                    while (!infected&&step<3)
                    {
                        bool selected = false;
                        while(!selected)
                        {
                            bool flag = true;
							k = random(3)+1;
                            for(int s=0; s<z; s++)
                                if(K[s]==k) flag = false;
                            if(flag){selected = true; K[z]=k; z++;}
                        }
                        switch (k)
                        {
                            case 1: {
                                if(skin[i][j+1].getStatus()==0)
                                {
									bool f =random(2);
									if(f){
                                        skin[i][j+1].setStatus(1);
                                        infected = true;
                                        break;
                                    }
                                    else {step++; break;}
                                }
                                else {step++; break;}
                            }
                            case 2: {
                                if(skin[i+1][j+1].getStatus()==0)
